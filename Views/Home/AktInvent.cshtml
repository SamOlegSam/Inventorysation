<script>

    $(function d() {
        $('#filial1').change(function d() {
            var ID = $(this).val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetDatInv")/' + ID,
                success: function d(data) {
                    $('#datinv').replaceWith(data);
                }
            });
        });
    })
</script>
